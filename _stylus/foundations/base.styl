/*
 * base.css
 * All default styles for layout and typography
 * ============================================
 */

/*--------------------
  Typographic Styles
----------------------*/

::-moz-selection
  color #fff
  background #4992ad
::selection
  color #fff
  background #4992ad

body
  font-family "Lato", "Lucida Sans", "Lucida Grande", "Lucida Sans Unicode", Arial, sans-serif

  font-size .875em
  line-height 1.5
  font-weight 300
  color #222
  // -webkit-font-smoothing antialiased

  @media $b800
    font-size 1em
  @media $b1000
    font-size 1.125em
  @media $b1200
    font-size 1.25em
  @media $b1600
    font-size 1.375em
  @media $b1800
    font-size 1.5em

a
  color #4992ad
  text-decoration none
  transition color 0.4s ease
a:hover
  color #333
  text-decoration none
  transition color 0.2s ease
a:focus,
a:active
  color #333
  outline none

h1, h2, h3, h4, h5, h6
  line-height 1
  font-weight 300

h1
  font-size 3.05em
h2
  font-size 1.8em
h3
  font-size 1.6em
h4
  font-size 1.4em
h5
  font-size 1.2em
h6
  font-size 1em

pre, code, kbd, style
  font-family Monaco, "Courier New", Courier, monospace
  font-size .875em
pre code
  font-size 1em

blockquote
  font-size 1.125em


/*---------------
  Layout Styles
-----------------*/

body
  background-color #FFF

/* Display in IE */
article, aside, details, figcaption, figure, footer, header, hgroup, nav, section
  display block

html, body, p, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, code, form, fieldset, legend, input, button, textarea, blockquote, th, td
  margin 0
  padding 0

h1, h2, h3, h4, h5, h6
  margin-bottom 1em
  padding-top 1em

p, pre, dt, ul, ol, hr, legend, input, button, textarea, select, address, table, blockquote
  margin-bottom 1.5em

fieldset, img
  border 0

img, object
  vertical-align bottom

ul li
  list-style-type disc
  list-style-position inside
ol li
  list-style-type decimal
  list-style-position inside

nav ul li
  list-style none

sub,
sup
  position relative
  font-size 75%
  line-height 0
  vertical-align baseline
sup
  top -0.5em

sub
  bottom -0.25em

legend
  color #000
  padding-bottom .5em

table
  border-collapse collapse
  border-spacing 0

th
  text-align center
tbody th
  text-align left

blockquote, q, em, cite, dfn, i, cite, var, address
  font-style italic

blockquote p:before, blockquote p:after, q:before, q:after
  content ''

th, strong, dt, b
  font-weight 400

ins
  text-decoration none
  border-bottom 3px double #333

del
  text-decoration line-through

mark
  background-color #FF9
  color #000000
  font-style italic
  font-weight bold

abbr,
acronym
  border-bottom 1px dotted #333
  font-variant normal

dd
  padding-left 20px
  margin-top .5em

hr
  display block
  height 1px
  border 0
  border-top 1px solid #cccccc
  margin-right 30px
  margin-left 30px

blockquote
  border-left 1px solid #ccc
  padding 10px 20px 10px 39px
  background-color #fafafa

blockquote p
  margin-bottom 0